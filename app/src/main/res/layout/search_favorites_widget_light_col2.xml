<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetContainer"
    style="@style/SearchWidgetContainer"
    android:background="@drawable/search_widget_favorites_light_background">

    <RelativeLayout
        android:id="@+id/widgetSearchBarContainer"
        style="@style/SearchWithFavoritesWidgetSearchBarContainer"
        android:background="@drawable/search_widget_background_light">

        <ImageView
            android:id="@+id/logo"
            style="@style/SearchWidgetDDGLogo"
            android:src="@drawable/logo_mini" />

        <TextView
            android:id="@+id/searchInputBox"
            style="@style/SearchWidgetInputBox"
            android:layout_toStartOf="@+id/search"
            android:layout_toEndOf="@+id/logo"
            android:visibility="gone"
            android:text="@string/searchWidgetTextHint"
            android:textColor="@color/brownishGrayTwo" />

        <ImageView
            android:id="@+id/search"
            style="@style/SearchWidgetSearchIcon"
            android:src="@drawable/ic_widget_loupe_light" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridView
            android:id="@+id/emptyfavoritesGrid"
            style="@style/SearchWidgetFavoritesGrid"
            android:numColumns="2" />

        <GridView
            android:id="@+id/favoritesGrid"
            style="@style/SearchWidgetFavoritesGrid"
            android:numColumns="2" />

    </FrameLayout>
</LinearLayout>